{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon ./src/server.ts",
    "start:prod": "NODE_ENV=production nodemon ./src/server.ts",
    "lint:check": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "format:check": "npx prettier . --check",
    "format:fix": "npx prettier . --write",
    "test:unit": "npx jest",
    "db:create": "npx drizzle-kit generate $npm_package_config_drizzle_kit",
    "db:push": "drizzle-kit push $npm_package_config_drizzle_kit",
    "db:seed": "npx tsx ./src/db/seed.ts",
    "prepare": "cd .. && husky ./server/.husky",
    "packages:check": "npx npm-check-updates",
    "packages:update": "npx ncu --interactive"
  },
  "config": {
    "drizzle_kit": "--config ./src/config/drizzle-kit.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "argon2": "^0.40.3",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "formidable": "^3.5.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nodemailer": "^6.9.13",
    "pg": "^8.11.5",
    "redis": "^4.6.14",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-typescript": "^7.24.6",
    "@eslint/js": "^9.3.0",
    "@faker-js/faker": "^8.4.1",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/formidable": "^3.4.5",
    "@types/jest": "^29.5.12",
    "@types/lint-staged": "^13.3.0",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.13",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.6",
    "@types/swagger-ui-express": "^4.1.6",
    "drizzle-kit": "^0.21.4",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-json": "^4.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.2",
    "npm-check-updates": "^16.14.20",
    "prettier": "3.2.5",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint:check",
      "npm run format:check"
    ],
    "**/*.test.ts": [
      "npm run test:unit --onlyChanged"
    ]
  },
  "_moduleAliases": {
    "@": "./src"
  }
}
